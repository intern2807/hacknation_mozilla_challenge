{
  "manifest_version": 3,
  "name": "Harbor (WASM MCP)",
  "version": "0.1.0",
  "description": "WASM MCP extension with Web Agents API.",
  "background": {
    "service_worker": "dist/background.js",
    "type": "module"
  },
  "permissions": [
    "storage",
    "scripting",
    "activeTab",
    "tabs"
  ],
  "omnibox": {
    "keyword": "h"
  },
  "host_permissions": [
    "http://localhost/*",
    "https://*/*"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["dist/agents/content-script.js"],
      "run_at": "document_start"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "dist/agents/injected.js",
        "dist/permission-prompt.html",
        "dist/permission-prompt.js",
        "dist/design-tokens.css",
        "assets/mcp-time.wasm"
      ],
      "matches": ["<all_urls>"]
    }
  ],
  "icons": {
    "16": "assets/icon.svg",
    "32": "assets/icon.svg",
    "48": "assets/icon.svg",
    "128": "assets/icon.svg"
  },
  "action": {
    "default_title": "Harbor",
    "default_popup": "dist/directory.html",
    "default_icon": {
      "16": "assets/icon.svg",
      "32": "assets/icon.svg",
      "48": "assets/icon.svg"
    }
  }
}
