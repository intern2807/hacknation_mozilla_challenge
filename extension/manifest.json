{
  "manifest_version": 3,
  "name": "Harbor",
  "version": "0.260104.2113",
  "description": "Native messaging bridge for Harbor - AI agents with MCP tools",
  "permissions": [
    "nativeMessaging",
    "storage",
    "tabs",
    "activeTab",
    "scripting",
    "management"
  ],
  "host_permissions": [
    "https://registry.modelcontextprotocol.io/*",
    "https://raw.githubusercontent.com/*",
    "<all_urls>"
  ],
  "background": {
    "scripts": ["background.js"],
    "type": "module"
  },
  "sidebar_action": {
    "default_title": "Harbor",
    "default_panel": "sidebar.html",
    "default_icon": "icons/harbor-icon.svg"
  },
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["content-bridge.js"],
      "run_at": "document_start",
      "all_frames": false
    },
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["vscode-detector.js"],
      "run_at": "document_idle",
      "all_frames": false
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["provider-injected.js", "page-chat.js"],
      "matches": ["http://*/*", "https://*/*"]
    }
  ],
  "commands": {
    "toggle-page-chat": {
      "suggested_key": {
        "default": "Alt+Shift+C",
        "mac": "Alt+Shift+C"
      },
      "description": "Toggle page chat sidebar"
    }
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "raffi.krikorian.harbor@gmail.com",
      "strict_min_version": "112.0"
    }
  }
}
