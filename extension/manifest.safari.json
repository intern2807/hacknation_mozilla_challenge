{
  "manifest_version": 3,
  "name": "Harbor",
  "version": "0.1.0",
  "description": "Infrastructure extension for AI and MCP capabilities. Provides LLM access and tool execution for other extensions.",
  "browser_specific_settings": {
    "safari": {
      "strict_min_version": "16.4"
    }
  },
  "background": {
    "scripts": ["dist/background.js"],
    "persistent": false
  },
  "permissions": [
    "storage",
    "scripting",
    "activeTab",
    "tabs"
  ],
  "host_permissions": [
    "http://localhost/*",
    "http://127.0.0.1/*",
    "https://*/*"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["dist/discovery.js"],
      "run_at": "document_start"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "dist/discovery-injected.js",
        "dist/page-chat.js",
        "dist/design-tokens.css",
        "dist/demo-bootstrap.js",
        "dist/js-runtime/builtin-echo-worker.js",
        "dist/wasmer_wasi_js_bg.wasm",
        "demo/*",
        "assets/*",
        "bundled/*"
      ],
      "matches": ["<all_urls>"]
    }
  ],
  "icons": {
    "16": "assets/icon-16.png",
    "32": "assets/icon-32.png",
    "48": "assets/icon-48.png",
    "128": "assets/icon-128.png"
  },
  "action": {
    "default_title": "Harbor",
    "default_popup": "dist/sidebar.html",
    "default_icon": {
      "16": "assets/icon-16.png",
      "32": "assets/icon-32.png",
      "48": "assets/icon-48.png"
    }
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'"
  }
}
