{
  "name": "harbor-search-sidebar",
  "version": "1.0.0",
  "description": "Harbor product search sidebar for Firefox",
  "private": true,
  "homepage": ".",
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "build:firefox": "cross-env INLINE_RUNTIME_CHUNK=false GENERATE_SOURCEMAP=false react-scripts build && npm run post-build",
    "post-build": "node scripts/post-build.js",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "clean": "rm -rf build node_modules package-lock.json",
    "reinstall": "npm run clean && npm install",
    "dev": "npm start",
    "watch": "npm run build:firefox -- --watch",
    "lint": "eslint src/",
    "format": "prettier --write \"src/**/*.{js,jsx,json,css}\""
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "react-scripts": "^5.0.1",
    "fs-extra": "^11.1.1",
    "cross-env": "^7.0.3"
  },
  "eslintConfig": {
    "extends": [
      "react-app"
    ],
    "globals": {
      "browser": "readonly",
      "chrome": "readonly"
    }
  },
  "browserslist": {
    "production": [
      "firefox >= 109",
      "chrome >= 120"
    ],
    "development": [
      "last 1 firefox version",
      "last 1 chrome version"
    ]
  }
}
