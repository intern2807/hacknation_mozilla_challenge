{
  "manifest_version": 3,
  "name": "Web Agents API",
  "version": "0.260202.2145",
  "description": "Exposes AI capabilities to web pages. Requires Harbor extension.",
  "browser_specific_settings": {
    "gecko": {
      "id": "web-agents@krikorian.co",
      "data_collection_permissions": {
        "required": ["none"]
      }
    }
  },
  "background": {
    "scripts": ["dist/background.js"]
  },
  "permissions": [
    "storage",
    "tabs",
    "scripting",
    "activeTab"
  ],
  "host_permissions": [
    "http://localhost/*",
    "https://*/*"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["dist/content-script.js"],
      "run_at": "document_start",
      "all_frames": false
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "dist/injected.js",
        "dist/permission-prompt.html",
        "dist/permission-prompt.js",
        "dist/design-tokens.css"
      ],
      "matches": ["<all_urls>"]
    }
  ],
  "icons": {
    "16": "assets/icon.svg",
    "32": "assets/icon.svg",
    "48": "assets/icon.svg",
    "128": "assets/icon.svg"
  },
  "action": {
    "default_title": "Web Agents API",
    "default_icon": {
      "16": "assets/icon.svg",
      "32": "assets/icon.svg",
      "48": "assets/icon.svg"
    }
  },
  "sidebar_action": {
    "default_title": "Web Agents API",
    "default_panel": "dist/sidebar.html",
    "default_icon": {
      "16": "assets/icon.svg",
      "32": "assets/icon.svg",
      "48": "assets/icon.svg"
    }
  }
}
